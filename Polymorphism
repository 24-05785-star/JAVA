class Animal {
    private String name;
    private int age;
    private String color;
    private double weight;
    
    public Animal(String name, int age, String color, double weight) {
        this.name = name;
        this.age = age;
        this.color = color;
        this.weight = weight;
    }
    
    public void eat() {
        System.out.println(name + " is eating.");
    }
    
    public void sleep() {
        System.out.println(name + " is sleeping.");
    }
    
    public void makeSound() {
        System.out.println(name + " makes a sound.");
    }
    
    public String getName() { return name; }
    public int getAge() { return age; }
    public String getColor() { return color; }
    public double getWeight() { return weight; }
}

class Dog extends Animal {
    private String breed;
    private boolean isTrained;
    
    public Dog(String name, int age, String color, double weight, String breed, boolean isTrained) {
        super(name, age, color, weight);
        this.breed = breed;
        this.isTrained = isTrained;
    }
    
    @Override
    public void makeSound() {
        System.out.println(getName() + " says: Woof! Woof!");
    }
    
    public void fetch() {
        System.out.println(getName() + " is fetching the ball.");
    }
    
    public String getBreed() { return breed; }
    public boolean isTrained() { return isTrained; }
}

class Cat extends Animal {
    private String breed;
    private boolean likesCatnip;
    
    public Cat(String name, int age, String color, double weight, String breed, boolean likesCatnip) {
        super(name, age, color, weight);
        this.breed = breed;
        this.likesCatnip = likesCatnip;
    }
    
    @Override
    public void makeSound() {
        System.out.println(getName() + " says: Meow! Meow!");
    }
    
    public void climb() {
        System.out.println(getName() + " is climbing the tree.");
    }
    
    public String getBreed() { return breed; }
    public boolean likesCatnip() { return likesCatnip; }
}

class Bird extends Animal {
    private String species;
    private boolean canFly;
    
    public Bird(String name, int age, String color, double weight, String species, boolean canFly) {
        super(name, age, color, weight);
        this.species = species;
        this.canFly = canFly;
    }
    
    @Override
    public void makeSound() {
        System.out.println(getName() + " says: Tweet! Tweet!");
    }
    
    public void fly() {
        if (canFly) {
            System.out.println(getName() + " is flying high!");
        } else {
            System.out.println(getName() + " cannot fly.");
        }
    }
    
    public String getSpecies() { return species; }
    public boolean canFly() { return canFly; }
}

public class PolymorphismExample {
    public static void main(String[] args) {
        Dog dog = new Dog("Buddy", 3, "Golden", 25.5, "Golden Retriever", true);
        Cat cat = new Cat("Whiskers", 2, "White", 4.2, "Persian", true);
        Bird bird = new Bird("Tweety", 1, "Yellow", 0.3, "Canary", true);
        
        Animal[] animals = {dog, cat, bird};
        
        System.out.println("=== Animal Information ===");
        for (Animal animal : animals) {
            System.out.println("Name: " + animal.getName() + 
                             ", Age: " + animal.getAge() + 
                             ", Color: " + animal.getColor() +
                             ", Weight: " + animal.getWeight() + "kg");
        }
        
        System.out.println("\n=== Polymorphism in Action ===");
        for (Animal animal : animals) {
            animal.makeSound();  // Polymorphic method call
        }
        
        System.out.println("\n=== Specific Animal Behaviors ===");
        if (animals[0] instanceof Dog) {
            Dog myDog = (Dog) animals[0];
            System.out.println("Breed: " + myDog.getBreed() + ", Trained: " + myDog.isTrained());
            myDog.fetch();
        }
        
        if (animals[1] instanceof Cat) {
            Cat myCat = (Cat) animals[1];
            System.out.println("Breed: " + myCat.getBreed() + ", Likes Catnip: " + myCat.likesCatnip());
            myCat.climb();
        }
        
        if (animals[2] instanceof Bird) {
            Bird myBird = (Bird) animals[2];
            System.out.println("Species: " + myBird.getSpecies() + ", Can Fly: " + myBird.canFly());
            myBird.fly();
        }
    }
}
